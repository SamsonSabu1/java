        public void Load()
    {
        try {
            pat=con.prepareStatement("select * from pract");
            ResultSet rs=pat.executeQuery();
            ResultSetMetaData rss=rs.getMetaData();
            int c;
            c=rss.getColumnCount();
            def=(DefaultTableModel)Stud1.getModel();
            def.setRowCount(0);
            while(rs.next())
            {
                Vector v=new Vector();
                for(int i=0;i<c;i++)
                {
                    v.add(rs.getString("id"));
                     v.add(rs.getString("name"));
                      v.add(rs.getString("grade"));
                       
                }
                def.addRow(v);
            }
            
        } catch (SQLException ex) {
            Logger.getLogger(pract2.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
