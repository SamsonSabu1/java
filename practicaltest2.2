import java.util.*;

class StudentGradeManager {
    static TreeMap<String, Integer> studentGrades = new TreeMap<>(); );

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int selection;
        do {
            System.out.println("1. Add Students");
            System.out.println("2. Remove Students"); 
            System.out.println("3. View Students");
            System.out.println("4. Update the student grade");
            System.out.println("5. Exit");
            System.out.print("Enter your choice: ");

            selection = scanner.nextInt();

            switch (selection) {
                case 1:
                    addStudent(scanner);
                    break;
                case 2:
                    removeStudent(scanner);
                    break;
                case 3:
                    viewStudents();
                    break;
                case 4:
                    updateStudentGrade(scanner); 
                    break;
                case 5:
                    System.out.println("Exit");
                    break;
                default:
                    System.out.println("Invalid choice. Please enter a valid option.");
            }
        } while (selection != 5);
        scanner.close();
    }

    static void addStudent(Scanner scanner) {
        System.out.print("Enter the student's name: ");
        String name = scanner.next();
        System.out.print("Enter the student's grade: ");
        int grade = scanner.nextInt();
        studentGrades.put(name, grade);
        System.out.println("Student added.");
    }

    static void removeStudent(Scanner scanner) { 
        System.out.print("Enter the student's name to remove: ");
        String name = scanner.next();
        studentGrades.remove(name);
        System.out.println("Student removed.");
    }

    static void viewStudents() {
        System.out.println("Student List:");
        for (Map.Entry<String, Integer> entry : studentGrades.entrySet()) {
            System.out.println("Name: " + entry.getKey() + ", Grade: " + entry.getValue());
        }
    }

    static void updateStudentGrade(Scanner scanner) { 
        System.out.print("Enter the student's name to update grade: ");
        String name = scanner.next();
        if (studentGrades.containsKey(name)) {
            System.out.print("Enter the new grade: ");
            int newGrade = scanner.nextInt();
            studentGrades.put(name, newGrade);
            System.out.println("Student grade updated.");
        } else {
            System.out.println("Student not found.");
        }
    }
}
